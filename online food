#include <iostream>
using namespace std;

int returnTotalBill();

int main() {
    int totalbill = returnTotalBill();
    cout << "Your total bill amount is: Rs " << totalbill << endl;
    cout << "Thank you for your order!" << endl;
    return 0;
}

int returnTotalBill() {
    char c;
    int billAmount = 0;

    cout << " --------------- FOODI PARU --------------- " << endl;
    cout << " --------------- WELCOME TO FOODI PARU --------------- " << endl;
    cout << "--------------- ONLINE FOOD ORDER ---------------" << endl;
    cout << "--------------- Please follow below instructions --------------- " << endl;
    cout << "Step 1: Please press 's' to start your order" << endl;

    // Wait for user to start the order
    while (true) {
        cin >> c;
        if (c == 's' || c == 'S') {
            break;
        }
        cout << "You have entered wrong value, please press 's'!" << endl;
    }

    // Main ordering loop
    while (true) {
        char item;
        cout << "Please select your choice: " << endl;
        cout << "(a) Veg Items                  (b) Non-veg Items" << endl;
        cin >> item;

        if (item == 'a' || item == 'A') {
            while (true) {
                cout << "Select a veg item: " << endl;
                cout << "(1) Paneer      : Price  : Rs 250" << endl;
                cout << "(2) Burger      : Price  : Rs 50" << endl;
                cout << "(3) Pizza       : Price  : Rs 100" << endl;
                cout << "(4) Chowmein    : Price  : Rs 150" << endl;
                cout << "(5) Veg Roll    : Price  : Rs 100" << endl;

                int vegItem;
                cin >> vegItem;

                switch (vegItem) {
                    case 1: billAmount += 250; break;
                    case 2: billAmount += 50; break;
                    case 3: billAmount += 100; break;
                    case 4: billAmount += 150; break;
                    case 5: billAmount += 100; break;
                    default:
                        cout << "Invalid selection, please try again!" << endl;
                        continue;
                }

                char selectAgain;
                cout << "Do you want to add more veg items? (y/n)" << endl;
                cin >> selectAgain;
                if (selectAgain != 'y' && selectAgain != 'Y') {
                    break; // Exit the veg item selection loop
                }
            }
        } 
        else if (item == 'b' || item == 'B') {
            while (true) {
                cout << "Select a non-veg item: " << endl;
                cout << "(1) Chicken      : Price  : Rs 350" << endl;
                cout << "(2) Chick Burger : Price  : Rs 100" << endl;
                cout << "(3) Pizza        : Price  : Rs 150" << endl;
                cout << "(4) Fish         : Price  : Rs 200" << endl;
                cout << "(5) Non Veg Roll : Price  : Rs 200" << endl;

                int nonvegItem;
                cin >> nonvegItem;

                switch (nonvegItem) {
                    case 1: billAmount += 350; break;
                    case 2: billAmount += 100; break;
                    case 3: billAmount += 150; break;
                    case 4: billAmount += 200; break;
                    case 5: billAmount += 200; break;
                    default:
                        cout << "Invalid selection, please try again!" << endl;
                        continue;
                }

                char selectAgain;
                cout << "Do you want to add more non-veg items? (y/n)" << endl;
                cin >> selectAgain;
                if (selectAgain != 'y' && selectAgain != 'Y') {
                    break; // Exit the non-veg item selection loop
                }
            }
        } 
        else {
            cout << "Invalid choice, please try again!" << endl;
            continue; // Restart the item selection process
        }

        char addMore;
        cout << "Do you want to select more items? (y/n)" << endl;
        cin >> addMore;
        if (addMore != 'y' && addMore != 'Y') {
            break; // Exit the main loop if the user doesn't want to continue
        }
    }

    return billAmount;
}
